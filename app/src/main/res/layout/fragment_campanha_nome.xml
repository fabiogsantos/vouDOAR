<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="br.com.tcc.tecdam.voudoar.campanha.fragment.CampanhaNomeFragment"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/campanha_nome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Qual Ã© o nome de sua campanha?"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorTextQuestion"
            android:textAlignment="center"
            android:gravity="center"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/campanha_nome_textinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/error_appearance">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/campanha_nome_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex: Campanha do Quilo"
                android:inputType="textPersonName"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</FrameLayout>
